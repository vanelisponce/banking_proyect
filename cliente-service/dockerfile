FROM eclipse-temurin:17-jdk-alpine AS builder

WORKDIR /app

# Cache de dependencias (solo se invalida si cambias pom.xml)
COPY pom.xml .
COPY mvnw .
COPY .mvn .mvn
RUN chmod +x ./mvnw
RUN ./mvnw dependency:go-offline -B

# COPY del código AL FINAL (invalida cache cuando cambias código)
COPY src ./src

# Agregar timestamp para forzar rebuild
ARG BUILD_DATE
ENV BUILD_DATE=${BUILD_DATE}

# Compilar
RUN ./mvnw clean package -DskipTests -B

# Etapa final
FROM eclipse-temurin:17-jre-alpine
WORKDIR /app
COPY --from=builder /app/target/cliente-service-0.0.1-SNAPSHOT.jar app.jar
EXPOSE 8081
ENTRYPOINT ["java", "-jar", "app.jar"]